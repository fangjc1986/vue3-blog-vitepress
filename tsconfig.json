{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
